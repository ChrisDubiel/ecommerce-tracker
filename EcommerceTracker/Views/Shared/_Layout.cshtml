<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ecommerce Tracker</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", false)
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/css/bootstrap-datepicker.min.css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script type="text/javascript" src="https://cdn.plot.ly/plotly-latest.min.js"></script>
</head>
<body>
@{
    var controller = ViewContext.RouteData.Values["controller"].ToString();
}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark header">
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarsExampleContainer" aria-controls="navbarsExampleContainer" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    @Html.ActionLink("Ecommerce Tracker", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})

    <div class="collapse navbar-collapse" id="navbarsExampleContainer">
        <ul class="navbar-nav mr-auto">
            @if (User.Identity.IsAuthenticated)
            {
                @*<li class="nav-item @(controller == "EmailAccounts" ? "active" : "")">
                    @Html.ActionLink("Email Accounts", "Index", "EmailAccounts", null, new { @class = "nav-link" })
                </li>*@
                <li class="nav-item @(controller == "Purchases" ? "active" : "")">
                    @Html.ActionLink("Purchases", "Index", "Purchases", null, new {@class = "nav-link"})
                </li>
                <li class="nav-item @(controller == "Categories" ? "active" : "")">
                    @Html.ActionLink("Categories", "Index", "Categories", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item @(controller == "Reports" ? "active" : "")">
                    @Html.ActionLink("Reports", "Index", "Reports", null, new {@class = "nav-link"})
                </li>
                <li class="nav-item @(controller == "Alerts" ? "active" : "")">
                    @Html.ActionLink("Alerts", "Index", "Alerts", null, new { @class = "nav-link" })
                </li>
            }
        </ul>
        @Html.Partial("_LoginPartial")
    </div>
</nav>
<div class="container-fluid body-content">
    @RenderBody()
    <footer>
        <p>&copy; @DateTime.Now.Year - Ecommerce Tracker</p>
    </footer>
</div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/js/bootstrap-datepicker.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
