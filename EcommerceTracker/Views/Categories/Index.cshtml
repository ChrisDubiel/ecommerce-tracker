@model IEnumerable<EcommerceTracker.ViewModels.CategoryViewModel>

@{
    ViewBag.Title = "Categories";
}

<h2 class="pb-3">Categories</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-secondary" })
</p>
@if (Model.Any())
{
    <div class="row">
        <div class="col-xl-6">
            <table class="table table-sm table-hover">
                <thead class="thead-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ParentCategoryName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NecessityDescription)
                    </th>
                    <th></th>
                </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ParentCategoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NecessityDescription)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                            @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
}
else
{
    <p class="h3">No categories created yet!</p>
}
